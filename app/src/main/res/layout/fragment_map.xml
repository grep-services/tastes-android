<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_medium_light"
    tools:context="com.tastes.app.MapFragment_">
<!--
    <com.google.android.gms.maps.MapView
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:liteMode="true"/>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/fragment_map_close"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:background="@drawable/close_dark"/>

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/fragment_map_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:imeOptions="actionDone"
            android:background="@drawable/background_edit"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/fragment_map_ok"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:background="@drawable/ok_dark"/>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_map_current"
        android:layout_width="@dimen/button_large"
        android:layout_height="@dimen/button_large"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/selector_button_current"/>

</FrameLayout>