<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tastes.app.MapFragment_">
<!--
    <com.google.android.gms.maps.MapView
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:liteMode="true"/>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/white_overlay">

        <Button
            android:id="@+id/fragment_map_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/close_dark"/>

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/fragment_map_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textSize="18sp"
            android:textColor="@color/text"
            android:imeOptions="actionDone"
            android:background="@drawable/background_edit"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/fragment_map_ok"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ok_dark"/>

    </LinearLayout>
