<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view"
    android:padding="@dimen/margin"
    android:descendantFocusability="blocksDescendants"><!-- for item click event. -->

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/list_row_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:padding="4dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/text"
        android:textColor="@color/text_inverse"/>

    <CheckBox
        android:id="@+id/list_row_check"
        android:layout_width="@dimen/check"
        android:layout_height="@dimen/check"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="@drawable/selector_check"
        android:visibility="gone"/>

</RelativeLayout>