<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin"
    android:background="@color/black_overlay"
    android:gravity="center"
    android:clickable="true"
    tools:context="com.tastes.app.PasscodeFragment">

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_narrow"
        android:includeFontPadding="false"
        android:textSize="@dimen/text"
        android:textColor="@color/text_inverse"
        android:text="@string/passcode_enter"/>

    <LinearLayout
        android:id="@+id/fragment_passcode_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_wide">

        <ImageView
            style="@style/Circle"
            android:id="@+id/fragment_passcode_circle_1"/>

        <ImageView
            style="@style/Circle"
            android:id="@+id/fragment_passcode_circle_2"/>

        <ImageView
            style="@style/Circle"
            android:id="@+id/fragment_passcode_circle_3"/>

        <ImageView
            style="@style/Circle"
            android:id="@+id/fragment_passcode_circle_4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginBottom="@dimen/margin">

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_1"
            android:tag="1"
            android:text="1"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_2"
            android:tag="2"
            android:text="2"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_3"
            android:tag="3"
            android:text="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_4"
            android:tag="4"
            android:text="4"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_5"
            android:tag="5"
            android:text="5"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_6"
            android:tag="6"
            android:text="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_7"
            android:tag="7"
            android:text="7"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_8"
            android:tag="8"
            android:text="8"/>

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_9"
            android:tag="9"
            android:text="9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <com.devspark.robototextview.widget.RobotoButton
            style="@style/Number"
            android:id="@+id/fragment_passcode_number_0"
            android:tag="0"
            android:text="0"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/fragment_passcode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin"
            android:padding="@dimen/margin_narrow"
            android:includeFontPadding="false"
            android:background="@null"
            android:textSize="@dimen/text"
            android:textColor="@color/text_inverse"
            android:text="@string/passcode_cancel"/>

    </RelativeLayout>

</LinearLayout>