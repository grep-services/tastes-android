                android:visibility="gone"/>--><!-- gone 빼도 되지만 구조상 들어가있는게 더 안정적인듯 하다. -->

        </LinearLayout>

        <View
            android:id="@+id/fragment_filter_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view"
        android:padding="@dimen/margin_narrow"
        android:gravity="center_vertical"
        android:background="@color/view">

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/fragment_filter_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textSize="@dimen/text"
            android:imeOptions="actionDone"
            android:background="@drawable/background_edit"/>

        <Button
            android:id="@+id/fragment_filter_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/add"/><!-- 39인데 비율상 34인 것을 대략 36으로 했다. -->

