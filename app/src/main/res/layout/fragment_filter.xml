<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.instamenu.app.FilterFragment">

    <ListView
        android:id="@+id/fragment_filter_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_inverse"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/list_divider"/>

    <TextView
        android:id="@+id/fragment_filter_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_inverse"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_inverse"
        android:text="No tag"
        android:visibility="gone"/><!-- gone 빼도 되지만 구조상 들어가있는게 더 안정적인듯 하다. -->
    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider"/>
        -->
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/fragment_filter_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:background="@null"
                android:hint="Add a tag"/>

            <Button
                android:id="@+id/fragment_filter_add"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:background="@drawable/add"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</LinearLayout>
