<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_inverse"
    tools:context="com.tastes.app.FilterFragment">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 아무리 해도 include로는 selector 연결 잘 안되서 이렇게 했다. -->
            <RelativeLayout
                android:id="@+id/fragment_filter_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:background="@drawable/selector_list"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"><!-- for item click event. -->

                <com.devspark.robototextview.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:padding="4dp"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="18sp"
                    android:textColor="@color/text_inverse"
                    android:text="@string/select_all"/>

                <CheckBox
                    android:id="@+id/fragment_filter_header_check"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:background="@drawable/selector_check"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:background="@color/list_divider"/>

            <ListView
                android:id="@+id/fragment_filter_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:listSelector="@drawable/selector_list"
                android:divider="@color/list_divider"
                android:dividerHeight="@dimen/list_divider"/>

            <!--
            <TextView
                android:id="@+id/fragment_filter_empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/view_inverse"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_inverse"
                android:text="@string/tag_empty"
                android:visibility="gone"/>--><!-- gone 빼도 되지만 구조상 들어가있는게 더 안정적인듯 하다. -->

        </LinearLayout>

        <View
            android:id="@+id/fragment_filter_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:visibility="gone"/>
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/view">

        <com.devspark.robototextview.widget.RobotoEditText
            android:id="@+id/fragment_filter_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:inputType="text"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:background="@drawable/background_edit"/>

        <Button
            android:id="@+id/fragment_filter_add"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/add"/>

    </LinearLayout>

</LinearLayout>
