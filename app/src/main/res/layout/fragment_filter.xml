<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_inverse"
    tools:context="com.tastes.app.FilterFragment">

    <!-- 아무리 해도 include로는 selector 연결 잘 안되서 이렇게 했다. -->
    <RelativeLayout
        android:id="@+id/fragment_filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/selector_list"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"><!-- for item click event. -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:textColor="@color/text_inverse"
            android:text="@string/select_all"/>

        <CheckBox
            android:id="@+id/fragment_filter_header_check"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/selector_check"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:background="@color/list_divider"/>

    <ListView
        android:id="@+id/fragment_filter_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@drawable/selector_list"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/list_divider"/>

    <TextView
        android:id="@+id/fragment_filter_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_inverse"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_inverse"
        android:text="@string/tag_empty"
        android:visibility="gone"/><!-- gone 빼도 되지만 구조상 들어가있는게 더 안정적인듯 하다. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/view">

        <EditText
            android:id="@+id/fragment_filter_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin"
            android:inputType="text"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:background="@null"/>

        <Button
            android:id="@+id/fragment_filter_add"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/add"/>

    </LinearLayout>

</LinearLayout>
