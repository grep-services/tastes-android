<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.instamenu.app.FilterFragment">

    <ListView
        android:id="@+id/fragment_filter_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_inverse"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/list_divider"/>

    <TextView
        android:id="@+id/fragment_filter_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/view_inverse"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_inverse"
        android:text="No tag"
        android:visibility="gone"/><!-- gone 빼도 되지만 구조상 들어가있는게 더 안정적인듯 하다. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/view">

        <EditText
            android:id="@+id/fragment_filter_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/margin"
            android:inputType="text"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:background="@null"
            android:hint="Add a tag"/>

        <Button
            android:id="@+id/fragment_filter_add"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/add"/>

    </LinearLayout>

</LinearLayout>
