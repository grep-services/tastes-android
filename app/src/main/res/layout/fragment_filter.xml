<com.tastes.widget.SlidingLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.tastes.app.FilterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view"
        android:padding="@dimen/margin"
        android:background="@color/view_inverse">

        <Button
            android:id="@+id/fragment_filter_close"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/close_light"
            android:onClick="mOnClick"/>

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_filter_close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:text="@string/title_fragment_filter"
            android:textSize="@dimen/text"
            android:textColor="@color/text_inverse"
            app:fontFamily="noto_sans_cjk_kr"
            app:textWeight="demilight"
            app:textStyle="normal"/>

        <Button
            android:id="@+id/fragment_filter_ok"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_light"
            android:onClick="mOnClick"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_dark">

            <!-- 아무리 해도 include로는 selector 연결 잘 안되서 이렇게 했다. -->
