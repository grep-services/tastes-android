<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    android:clickable="true"
    tools:context="com.tastes.app.PictureFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_picture_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/fragment_picture_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view"
        android:layout_gravity="top"
        android:padding="@dimen/margin"
        android:background="@color/black_overlay">

        <Button
            android:id="@+id/fragment_picture_close"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_alignParentLeft="true"
            android:background="@drawable/close_light"
            android:onClick="mOnClick"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_picture_close"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:padding="4dp"
            android:includeFontPadding="false"
            android:textSize="@dimen/text"
            android:textColor="@color/text_inverse"
            android:text="@string/title_fragment_picture"/>

        <Button
            android:id="@+id/fragment_picture_forward"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_alignParentRight="true"
            android:background="@drawable/ok_light"/>

    </RelativeLayout>

</FrameLayout>
